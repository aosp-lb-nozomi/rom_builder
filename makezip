  if
    file_getprop("/tmp/aroma-data/musicplayer.prop","selected.1") == "4"
    then
ui_print("|> Installing Noozy Player Music ....");
    package_extract_dir("stuff/Apps/Music/Noozy", "/data");
   endif;

##################################################################################################################################
# ES
    if
      file_getprop("/tmp/aroma-data/filez.prop","selected.1") == "1"
    then
ui_print("|> Installing ES File Explorer ....");
	  package_extract_dir("stuff/Apps/explorer/es", "/data");
