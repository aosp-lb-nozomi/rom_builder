	if file_getprop("/tmp/aroma-data/launcher.prop","selected.1") == "1"
	then
ui_print("|> Installing Nova Launcher ....");
		  package_extract_dir("stuff/Apps/launchers/nova", "/data");
	endif;	
	
#Apex Launcher
	if file_getprop("/tmp/aroma-data/launcher.prop","selected.1") == "2"
	then
ui_print("|> Installing Apex Launcher ....");
		 package_extract_dir("stuff/Apps/launchers/apex", "/data");
	endif;

