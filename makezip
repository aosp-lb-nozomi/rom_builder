#!/bin/bash

# all credits go to utak3r! I forked his project and modified it to work with Marvellous CM10! :)

# a little setup
BUILD_OUTPUT=~/*/out/target/product/marvel
ADDONS_DIR=./prebuilt
TIMESTAMP=`date +"%Y%m%d"`
TIMESTAMP_INFO=`date +"%d-%m-%Y"`
ZIPFILENAME=./cm-10-$TIMESTAMP-EXPERIMENTAL-marvel-MARVELLOUS-BETA0.zip

function make_updater_script(){

#headers
cat << EOF > updater-script
assert(getprop("ro.product.device") == "marvel" || getprop("ro.build.product") == "marvel");
mount("yaffs2", "MTD", "system", "/system");
package_extract_file("system/bin/backuptool.sh", "/tmp/backuptool.sh");
package_extract_file("system/bin/backuptool.functions", "/tmp/backuptool.functions");
set_perm(0, 0, 0777, "/tmp/backuptool.sh");
set_perm(0, 0, 0644, "/tmp/backuptool.functions");
run_program("/tmp/backuptool.sh", "backup");
unmount("/system");
show_progress(0.500000, 0);

ui_print("================================");
ui_print("      'Marvellous CM10' v6.0    ");
ui_print("       for the HTC Wildfire S   ");
ui_print("");
ui_print("      created by djolivier       ");
ui_print("      Built: $TIMESTAMP_INFO    ");
ui_print("");
ui_print("     Other used sources:        ");
ui_print("       CyanogenMod Team,        ");
ui_print("      AndroidARMv6 Team,        ");
ui_print("        Marvellous Team         ");
ui_print("       and many others!          ");
ui_print("================================");
ui_print("");
ui_print("");
ui_print("");
EOF

#extract files
cat << EOF >> updater-script
ui_print("|> Formatting...");
format("yaffs2", "MTD", "system", "0", "/system");
ui_print("|> Mounting...");
mount("yaffs2", "MTD", "system", "/system");
mount("yaffs2", "MTD", "userdata", "/data");
ui_print("|> Extracting ROM...");
package_extract_dir("system", "/system");
package_extract_dir("data", "/data");
EOF

#AROMA!
cat << EOF >> updater-script
	# Allshare
    if
      file_getprop("/tmp/aroma-data/systemapps.prop","item.1.1") == "1"
    then
      ui_print("|> Installing Ads Blocker - Hosts ....");
	  package_extract_dir("stuff/Apps/System/Ads", "/system");
    endif;	

	# Allshare
    if
      file_getprop("/tmp/aroma-data/systemapps.prop","item.1.2") == "1"
    then
      ui_print("|> Installing Titanium Backup ....");
	  package_extract_dir("stuff/Apps/System/Backup", "/data");
    endif;	

