	if file_getprop("/tmp/aroma-data/launcher.prop","selected.1") == "3"
	then
ui_print("|> Installing Trebuchet Launcher ....");
		  package_extract_dir("stuff/Apps/launchers/nexus", "/data");
	endif;	
	
